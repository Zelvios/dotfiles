shell-integration = zsh

auto-update = check

theme = theme.conf

font-family = JetBrainsMono Nerd Font Mono
font-size = 12

mouse-hide-while-typing = true
shell-integration-features = no-cursor

# Window
fullscreen = true
window-decoration = true
window-padding-balance = false
window-padding-y = 10
window-padding-x = 8
window-save-state = always

# Keybindings
keybind = ctrl+alt+n=new_tab
keybind = ctrl+alt+x=close_surface

keybind = ctrl+alt+tab=next_tab

keybind = ctrl+alt+shift+up=new_split:up
keybind = ctrl+alt+shift+down=new_split:down
keybind = ctrl+alt+shift+left=new_split:left
keybind = ctrl+alt+shift+right=new_split:right
